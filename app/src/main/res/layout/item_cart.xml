<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="10dp"
    android:gravity="center">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/item_cart_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/item_cart_image"
        android:layout_toRightOf="@id/item_cart_image"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cart_price" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_cart_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_cart_quantity"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/item_cart_quantity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/item_cart_quantity"
                android:layout_toRightOf="@id/item_cart_quantity"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>