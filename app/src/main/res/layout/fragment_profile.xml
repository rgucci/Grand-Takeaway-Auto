<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="Edit Profile Information"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/profile_information"
        android:padding="10dp">

        <TextView
            android:id="@+id/profile_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/profile_email_hint"
            android:textColor="@color/profile_text" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/profile_email_label"
            android:gravity="right"
            android:hint="@string/profile_email_hint"
            android:singleLine="true"
            android:textColor="@color/profile_text" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_connect_masterpass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/connect_with_masterpass"
            android:visibility="gone" />

        <TextView
            android:id="@+id/profile_connect_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/profile_alert"
            android:gravity="center"
            android:lines="2"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/profile_paired"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/profile_learn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/profile_learn_more"
        android:textColor="@color/profile_text"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>